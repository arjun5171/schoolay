<!DOCTYPE html>
<html>
  <head>
    <title>Schoolay</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<%= render :partial => 'layouts/header', :locals => {:date => @date}%>

	<div class="container">
	  <%if flash[:notice]%>
	  	<div class="alert alert-<%=flash[:notice].first%> alert-dismissable">
	  		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	  		<strong><%=flash[:notice].last%></strong>
	  	</div>
	  <%end%>
	  <%= yield %>
	</div>
</html>
